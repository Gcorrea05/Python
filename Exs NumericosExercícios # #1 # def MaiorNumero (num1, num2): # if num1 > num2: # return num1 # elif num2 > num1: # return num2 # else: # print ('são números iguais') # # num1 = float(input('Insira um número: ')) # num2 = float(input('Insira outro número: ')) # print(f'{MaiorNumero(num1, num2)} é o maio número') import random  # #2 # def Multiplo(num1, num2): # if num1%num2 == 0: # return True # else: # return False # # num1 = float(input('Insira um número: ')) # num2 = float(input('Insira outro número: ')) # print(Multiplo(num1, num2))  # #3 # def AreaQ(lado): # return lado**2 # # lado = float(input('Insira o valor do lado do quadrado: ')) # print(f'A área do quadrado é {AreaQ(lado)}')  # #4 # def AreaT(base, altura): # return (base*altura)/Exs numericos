#10
import random

n=random.randint(1,10)
chute = int(input('Insira seu chute: '))
vidas = 3

while True:
if chute == n:
print(f'Você acertou, o número era {n}')
break
else:
if vidas == 0:
print(f'Você perdeu, o número era {n}')
break
else:
print('Você errou, tente novamente.')
vidas-=1
print(f'viads: {vidas}')
if n > chute:
print('O número é maior')
else:
print('O número é menor')
chute = int(input('Insira outro chute: '))
